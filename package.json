{
  "name": "js13kgames-2019",
  "version": "0.1.0",
  "description": "Unnamed JS13KGames 2019 edition, WebXR category",
  "main": "src/js/index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "run-s clean build:*",
    "build:js": "rollup -c --environment MINIFY",
    "build:html": "grep -v aframe-v0.9.2.min.js src/index.html | html-inline -b dist | sed 's_<script>_<script src=https://js13kgames.com/webxr-src/aframe.js></script><script>_' | html-minifier -c htmlmin.json -o dist/index.html",
    "build:zip": "zip -FS -qjX9 dist/game.zip dist/index.html",
    "dev": "npm-run-all -s clean -p dev:*",
    "dev:js": "rollup -c -w --environment DEBUG",
    "dev:html": "cp src/index.html src/lib/* dist",
    "dev:serve": "browser-sync start --server dist --files dist --host 0.0.0.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "html-inline": "1.2.0",
    "html-minifier": "4.0.0",
    "npm-run-all": "4.1.5",
    "rollup": "1.20.1",
    "rollup-plugin-terser": "5.1.1",
    "terser": "4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herebefrogs/js13kgames-2019.git"
  },
  "author": "Jerome Lecomte <jlecomte@shutterstock.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/herebefrogs/js13kgames-2019/issues"
  },
  "homepage": "https://github.com/herebefrogs/js13kgames-2019#readme"
}
